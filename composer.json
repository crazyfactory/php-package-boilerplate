{
    "name": "CrazyFactory/boilerplate",
    "description": "boilerplate package",
    "type": "library",
    "autoload": {
        "psr-4": {
            "crazyfactory\\boilerplate\\": [
                "src/"
            ]
        }
    },
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "codeception/codeception": "*",
        "squizlabs/php_codesniffer": "*",
        "crazyfactory/sniffs": "*",
        "apigen/apigen": "*",
        "wikimedia/composer-merge-plugin": "*"
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "composer.local.json"
            ],
            "recurse": true,
            "replace": true,
            "ignore-duplicates": false,
            "merge-dev": true,
            "merge-extra": false,
            "merge-extra-deep": false,
            "merge-scripts": true
        }
    },
    "license": "GPL",
    "authors": [
        {
            "name": "CrazyFactory",
            "email": "dev@crazy-factory.com"
        }
    ],
    "scripts": {
        "post-install-cmd": "cp .code_quality/* .git/hooks/ && codecept bootstrap",
        "hook:validate-commit-msg": "",
        "hook:pre-push": "composer test",
        "hook:pre-commit": "composer lint",
        "document": "apigen generate -s ./src -d ./docs",
        "codecept": "codecept",
        "test": "codecept run",
        "test:coverage": "codecept run --coverage",
        "test:unit": "codecept run",
        "lint": "phpcs --standard=PSR2 src",
        "lint:fix": "phpcbf --standard=PSR2 src"
    }
}
